# Environment Configuration for GlycoInformatics AI

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=glycokg
POSTGRES_USER=glycoinfo
POSTGRES_PASSWORD=glycoinfo_pass

# GraphDB Configuration
GRAPHDB_HOST=localhost
GRAPHDB_PORT=7200
GRAPHDB_REPOSITORY=glycokg
GRAPHDB_USERNAME=admin
GRAPHDB_PASSWORD=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB_SESSIONS=0
REDIS_DB_CACHE=1
REDIS_DB_SIMILARITY=2
REDIS_DB_SPARQL=3
REDIS_DB_ML=4

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=glycokg

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=glycoinfo
MINIO_SECRET_KEY=glycoinfo_pass
MINIO_BUCKET_MODELS=models
MINIO_BUCKET_DATA=data
MINIO_BUCKET_RESULTS=results

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
API_SECRET_KEY=your-secret-key-change-in-production

# External API Configuration
GLYTOUCAN_API_BASE=https://glytoucan.org/sparql
GLYGEN_API_BASE=https://api.glygen.org
GLYCOPOST_API_BASE=https://glycopost.glycosmos.org/api
UNICARBKB_API_BASE=http://unicarbkb.org/api

# GlycoPOST Authentication (Required for real mass spectra)
# Register at: https://gpdr-user.glycosmos.org/signup
GLYCOPOST_EMAIL=your_email@example.com
GLYCOPOST_PASSWORD=your_password
# GLYCOPOST_API_TOKEN=your_api_token  # Alternative to email/password

# Optional API Keys for enhanced functionality
# PUBMED_API_KEY=your_ncbi_api_key     # For higher PubMed rate limits
# CROSSREF_EMAIL=your_email@example.com  # For Crossref polite pool access

# ML Configuration
MODEL_CACHE_DIR=./models
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512
EMBEDDING_DIM=768

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/glycokg.log

# Development flags
DEV_MODE=True
ENABLE_SWAGGER=True
ENABLE_CORS=True
ENABLE_PROFILING=False

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS_PER_WORKER=10000

# Data Processing
MAX_CONCURRENT_DOWNLOADS=10
BATCH_SIZE_DATA_SYNC=1000
RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2